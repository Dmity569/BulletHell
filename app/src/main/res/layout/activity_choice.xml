<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChoiceActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/background_menu"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="0dp" />

    <TableLayout
        android:id="@+id/level_table"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        tools:layout_editor_absoluteX="171dp"
        tools:layout_editor_absoluteY="-76dp">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/level_button_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/level_button_texture"
                    android:fontFamily="@font/gorgeouspixel"
                    android:text="1"
                    android:textColor="#000000"
                    android:textSize="36sp" />

                <Button
                    android:id="@+id/level_button_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/level_button_texture"
                    android:fontFamily="@font/gorgeouspixel"
                    android:text="2"
                    android:textColor="#000000"
                    android:textSize="36sp" />

                <Button
                    android:id="@+id/level_button_3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/level_button_texture"
                    android:fontFamily="@font/gorgeouspixel"
                    android:text="3"
                    android:textColor="#000000"
                    android:textSize="36sp" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/level_button_4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/level_button_texture"
                    android:fontFamily="@font/gorgeouspixel"
                    android:text="4"
                    android:textColor="#000000"
                    android:textSize="36sp" />

                <Button
                    android:id="@+id/level_button_5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/level_button_texture"
                    android:fontFamily="@font/gorgeouspixel"
                    android:text="5"
                    android:textColor="#000000"
                    android:textSize="36sp" />

                <Button
                    android:id="@+id/level_button_6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/level_button_texture"
                    android:fontFamily="@font/gorgeouspixel"
                    android:text="6"
                    android:textColor="#000000"
                    android:textSize="36sp" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/level_button_7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/level_button_texture"
                    android:fontFamily="@font/gorgeouspixel"
                    android:text="7"
                    android:textColor="#000000"
                    android:textSize="36sp" />

                <Button
                    android:id="@+id/level_button_8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/level_button_texture"
                    android:fontFamily="@font/gorgeouspixel"
                    android:text="8"
                    android:textColor="#000000"
                    android:textSize="36sp" />

                <Button
                    android:id="@+id/level_button_9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/level_button_texture"
                    android:fontFamily="@font/gorgeouspixel"
                    android:text="9"
                    android:textColor="#000000"
                    android:textSize="36sp" />
            </LinearLayout>
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_gold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

</androidx.constraintlayout.widget.ConstraintLayout>